<%= form_for @movie do |f| %>
  <%= f.label :movie_title %>:<br>
  <%= f.text_field :name %><br>

  <%= f.label :movie_director %>:<br>
  <%= f.text_field :director %><br>

  <%= f.label :description %>:<br>
  <%= f.text_area :description, :cols => 40, :rows => 15 %><br>

  <%= f.submit %>
<% end %>
