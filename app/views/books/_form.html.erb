<%= form_for @book do |f| %>
  <%= f.label :book_title %>:<br>
  <%= f.text_field :name %><br>

  <%= f.label :author %>:<br>
  <%= f.text_field :author %><br>

  <%= f.label :description %>:<br>
  <%= f.text_area :description, :cols => 40, :rows => 15 %><br>

  <%= f.submit "Add Book", class: "btn btn-default" %>
<% end %>
