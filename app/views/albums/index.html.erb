<h1>Albums</h1>

<table class="table table-striped">
  <colgroup span="3" class="columns"></colgroup>
  <tr>
    <th>Ranking</th>
    <th>Title</th>
    <th>Upvote</th>
  </tr>

  <% @albums.each do |album| %>
    <tr>
      <td>Ranking: <%= album.rank %></td>
      <td><%= link_to album.name, album_path(album) %></td>
      <td><%= button_to 'Upvote', album_vote_path(album), class: "btn btn-default" %></td>
    </tr>
    <% end %>

</table>

<%= link_to "All Media", home_path, class: "btn btn-default" %>
<%= link_to "Add Album", new_album_path, class: "btn btn-default" %>
