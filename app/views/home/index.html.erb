<div class="col-sm-4">
  <h1>Top Movies</h1>
  <ul class="list-group">
  <% @movies.each do |movie| %>
    <li class="list-group-item"><%= link_to movie.name, movie_path(movie) %> <small>Ranked: <%= movie.rank %></small></li>
  <% end %>
</ul>
  <%= link_to "View More Movies", movies_path %>
</div>

